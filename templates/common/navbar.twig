
{% set navbar = craft.entries().section('navbar').one() %}
{% set homepage = craft.entries().section('homepage').one() %}

<nav class="navbar navbar-expand-lg navbar-light bg-white">

  <a class="navbar-brand" href="{{homepage.uri}}"><img src="{{navbar.logo.one().url}}" alt="Logo"></a>
  <a class="navbar-brand" href="{{homepage.uri}}"><img src="{{navbar.euText.one().url}}" alt="EU text"></a>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse d-flex flex-column" id="navbarText">

      <ul class="list-group list-group-horizontal-xl ml-auto">
        {% set socialNetworks = navbar.socialNetworks.all() %}
        {% for socialNetwork in socialNetworks %}
          <li class="list-group-item border-0 p-1 ml-3"><a class="{{socialNetwork.socialIcon.value}} icons" href="{{socialNetwork.socialLink}}" target="_blank"></a></li>
        {% endfor %}
      </ul>

      <ul class="list-group list-group-horizontal-xl ml-auto mt-1">
        {% for categories in navbar.headerCategory.one() %}
          {% for category in categories %}
            <li class="list-group-item border-0 p-0 ml-3 mt-2"><a class="text-decoration-none" href="{{category.topicUrl}}">{{category.topicName|upper}}</a></li>            
          {% endfor %}
        {% endfor %}
      </ul>

  </div>
  
</nav>