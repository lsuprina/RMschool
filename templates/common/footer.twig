</main>

<footer id="footer" class="">
    <div class="container">

        <div class="top-row row col-12 py-4 mb-5">
            <span class="share">{{footer.sharePageTitle}}</span>
            <ul class="list-group list-group-horizontal">
            {% set url = craft.app.request.absoluteUrl %}
                {% for socialNetwork in footer.sharePageLink.all() %}
                    <li class="list-group-item border-0 p-1 ml-3"><a class="{{socialNetwork.iconName}} icons text-decoration-none" 
                        href="{{craft.simpleSharing.link(url,socialNetwork.title|lower)}}" target="_blank"></a></li>
                {% endfor %}
            </ul>
        </div>

        <div class="middle-row row">


        <div class="col-6 col-lg"> 
            <h5>{{footer.leftMenuTitle}}</h5>
            <ul class="list-group list-group-flush">
                {% for link in footer.footerLeftMenu.all() %}
                    <li class="list-group-item"><a href="{{link.leftMenuLink}}" target="{{link.leftMenuLink.getTarget()}}">{{link.leftMenuLink.getCustomText()|upper}}</a></li>
                {% endfor %}
            </ul> 
        </div>

        <div class="col-6 col-lg"> 
            <h5>{{footer.rightMenuTitle}}</h5>
            <ul class="list-group list-group-flush">
                {% for link in footer.footerRightMenu.all() %}
                    <li class="list-group-item"><a href="{{link.rightMenuLink}}" target="{{link.rightMenuLink.getTarget()}}">{{link.rightMenuLink.getCustomText()|upper}}</a></li>
                {% endfor %}
            </ul> 
        </div>

            <div class="col offset-xl-3 offset-md-3 offset-sm-3">
                <img class="img-fluid" src="{{footer.logo.one().url}}" alt="Logo">
                <img class="img-fluid" src="{{footer.euText.one().url}}" alt="EU text">
            </div>

        </div>


        <div class="bottom-row row col-12 py-4 mt-4 align-items-center">
            <div class="footer-info col-12 col-sm-5 d-flex ">
                {% for document in footer.document.all() %}
                    <a href="{{document.documentLink}}" target="{{document.documentLink.getTarget()}}" class="mx-5">{{document.documentLink.getCustomText()|upper}}</a>
                {% endfor %}
            </div>

            <div class="d-flex col-12 col-sm-5 offset-2 align-items-center justify-content-sm-end justify-content-md-end ml-auto">
                <span class="connect">{{footer.socialNetworkTitle}}</span>
                <ul class="list-group list-group-horizontal">
                    {% for socialNetwork in footer.socialNetworkEntries.all() %}
                        <li class="list-group-item border-0 p-1 ml-3"><a class="{{socialNetwork.iconName}} icons text-decoration-none" 
                            href="{{socialNetwork.socialNetworkUrl}}" target="_blank"></a></li>
                    {% endfor %}
                </ul>
            </div>  

        </div>  
        
    </div>
</footer>



<script src="./assets/js/script.min.js" type="text/javascript" charset="utf-8"></script>

</body>
</html>