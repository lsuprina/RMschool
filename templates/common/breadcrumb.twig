{% set element = entry.breadcrumb %}

{% set mySettings =
    {
        customFieldHandleEntryId: element.id,
        customFieldHandle: 'breadcrumb'
    }
%}

{% set breadcrumbs = craft.breadcrumb.config(mySettings) %}

{% if breadcrumbs %}
<div class="c-breadcrumb">
    <ul class="breadcrumb">
        {% for crumb in breadcrumbs  %}
            {% if loop.last %}
            <li class="c-breadcrumb__item">
                <span>{{ element.title }}</span>
            </li>
            {% else %}
            <li class="c-breadcrumb__item">
                <a class="c-breadcrumb__link" href="{{ crumb.url }}">
                    <span>{{ crumb.title }}</span>
                </a>
            </li>
            {% endif %}
        {% endfor %}
    </ol>
</div>
{% endif %}
<hr>