{% set module = module %}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

  <ol class="carousel-indicators">
    {% for key,entry in module.hero.all %}
      <li data-target="#carouselExampleIndicators" data-slide-to="{{key}}" class="carousel-indicator {{loop.first ? 'active'}}"></li>
    {% endfor %}
  </ol>

  <div class="carousel-inner">
    {% for key,entry in module.hero.all() %}
      <div class="carousel-item {{loop.first ? 'active'}}">
        <img src="{{entry.image.one().url}}" alt="{{entry.image.one().url}}" class="pozadina">
        <div class="item-text container py-5">
          <h2 class="col col-md-3">{{entry.title}}</h2>
          <h4 class="col col-md-3">{{entry.subtitle}}</h4>
          <button type="button" class="btn btn-success mb-5">{{layout.moreInfoLabel}}</button>
        </div>
      </div>
    {% endfor %}
      
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon fa fa-angle-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>

    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon fa fa-angle-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>

  </div>

</div>