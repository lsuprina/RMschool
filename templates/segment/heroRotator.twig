{% set module = module %}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    {% for key,entry in module.hero.all %}
      <li data-target="#carouselExampleIndicators" data-slide-to="{{key}}" class="carousel-indicator {{loop.first ? 'active'}}"></li>
    {% endfor %}
  </ol>

  <div class="carousel-inner">
    {% for key,entry in module.hero.all() %}
      <div class="carousel-item {{loop.first ? 'active'}}">
        <h2 class="col-3">{{entry.title}}</h2>
        <h4 class="col-2">{{entry.subtitle}}</h4>
        <button type="button" class="btn btn-primary">{{layout.moreInfoLabel}}</button>
      </div>
    {% endfor %}
    
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>